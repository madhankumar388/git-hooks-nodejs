{
  "name": "git-hooks-nodejs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint src/**",
    "lint-fix": "eslint src/** --fix",
    "success-message": "echo thanks for comitting $GIT_AUTHOR_NAME"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madhankumar388/git-hooks-nodejs.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/madhankumar388/git-hooks-nodejs/issues"
  },
  "homepage": "https://github.com/madhankumar388/git-hooks-nodejs#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "post-commit": "npm run success-message"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "jest --findRelatedTests"
    ]
  },
   "commitlint": {
    "rules": {
      "references-empty": [2, "never"]
    },
    "parserPreset": {
      "parserOpts": {
        "issuePrefixes": ["ISSUE-"]
      }
    }
  }
}
